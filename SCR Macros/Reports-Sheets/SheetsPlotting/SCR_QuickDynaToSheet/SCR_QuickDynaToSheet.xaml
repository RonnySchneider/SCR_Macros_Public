<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="749.8" >
    <Label Content="quickly create Dynaviews/Sheets"/>

    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
            <UniformGrid Columns="2">
                <Label Content="Select existing Sheetset" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:ComboBoxEntityPicker x:Name="sheetsetpicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            </UniformGrid>
            
            <CheckBox x:Name="useexistingsheet" Content="use existing Sheet"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=useexistingsheet}">
                <UniformGrid Columns="2">
                    <Label Content="Select existing Sheet" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:ComboBoxEntityPicker x:Name="sheetpicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </UniformGrid>
            </StackPanel>

            <UniformGrid Columns="2">

                <Label Content="Select Dynaview-Viewfilter" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:ComboBoxEntityPicker x:Name="viewfilterpicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Content="Select Dynaview-Layer" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:LayerPicker x:Name="dynalayerpicker"/>
            </UniformGrid>
            <Label Content="Dynaview Bottom Left Corner on Sheet" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

            <UniformGrid Columns="2">
                <Label x:Name="labelx" Content="X in " VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="dynax"/>
                <Label x:Name="labely" Content="Y in " VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="dynay"/>
                <Label Content="Scale-Factor 1 : " VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:NumericEdit x:Name="dynascale"/>
                <Label Content="Sheet Name Prefix" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,2,-24,2.4"/>
                <TextBox x:Name="sheetnameprefix" Text="Frame " VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="1,6,3,6.4"/>
                <Label Content="next Sheet Number" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:NumericEdit x:Name="sheetnameincstart"/>
                <Label Content="Increment" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:NumericEdit x:Name="sheetnameinc"/>

            </UniformGrid>
        </StackPanel>
    </Border>

    <GroupBox Header="select Outline and Corners in Planview">
        <StackPanel>
            <CheckBox x:Name="easymassframe" IsChecked="True " Content="Easy-Mass-Frame-Select&#xA;Outline starts Bottom-Left" Checked="easymassframeChanged" Unchecked="easymassframeChanged"/>
            <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>
            <StackPanel x:Name="singleframe" IsEnabled="False">

                    <Label Content="Easy-Single-Frame-Select&#xA;Outline starts Bottom-Left"/>
                    <UniformGrid Columns="2">
                        <Label Content="Frame Line"/>
                        <Wpf:SelectEntity x:Name="linepicker1"/>
                    </UniformGrid>
                    <CheckBox x:Name="manualpick" Content="manual Corner Picking"/>
                    <StackPanel IsEnabled="{Binding IsChecked, ElementName=manualpick}">
                        <UniformGrid Columns="2">
                            <Label Content="Bottom-Left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                            <Wpf:CoordinateEdit x:Name="coordpick1" ShowElevationIf3D="True" AutoTab="True"/>
                            <Label Content="Bottom-Right" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                            <Wpf:CoordinateEdit x:Name="coordpick2" ShowElevationIf3D="True" AutoTab="True"/>
                        </UniformGrid>
                    </StackPanel>

            </StackPanel>

        </StackPanel>
    </GroupBox>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>


</StackPanel> 
    