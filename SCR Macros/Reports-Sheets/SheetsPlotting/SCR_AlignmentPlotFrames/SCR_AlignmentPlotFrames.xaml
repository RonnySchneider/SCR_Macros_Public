<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="749.8" >
    <Label Content="create Plotframes along an Alignment"/>
    <Label Content="select Frame Outline Layer:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>
    <Label Content="select relation Frame-Up to Alignment:"/>
    <UniformGrid Columns="4">
        <RadioButton x:Name="frameleft" Content="&#x2190;" GroupName="frameorientation"/>
        <RadioButton x:Name="frameup" Content="&#x2191;" GroupName="frameorientation" IsChecked="True"/>
        <RadioButton x:Name="frameright" Content="&#x2192;" GroupName="frameorientation"/>
        <RadioButton x:Name="framedown" Content="&#x2193;" GroupName="frameorientation"/>
    </UniformGrid>
    <Label Content="select Alignment"/>
    <Wpf:SelectEntity x:Name="linepicker1"/>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
            <CheckBox x:Name="chooserange" Content="choose Chainage range" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=chooserange}">
                <UniformGrid Columns="2">
                    <Label Content="Start Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:StationEdit x:Name="startstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                    <Label Content="End Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:StationEdit x:Name="endstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </Border>

    <Label x:Name="labeldynadim" Content="Dynaview Dimensions on Sheet [mm]" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <UniformGrid Columns="2">
        <Label Content="Dynaview-Width" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:DistanceEdit x:Name="dynawidth"/>
        <!--<Label Content="vertical tolerance" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:NumericEdit x:Name="vertol"/>-->
        <Label Content="Dynaview-Height" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:DistanceEdit x:Name="dynaheight"/>

        <Label Content="Scale-Factor 1 : " VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:NumericEdit x:Name="dynascale"/>

    </UniformGrid>
    <UniformGrid Columns="2">
        <Label Content="Frame-Count (Min: 2)" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"/>
        <UniformGrid Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Wpf:NumericEdit x:Name="framecount"/>
            <Button Content="+" Click="framecountup" Width="20" Height="20" Padding="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Content="-" Click="framecountdown" Width="20" Height="20" Padding="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </UniformGrid>

    </UniformGrid>
    <UniformGrid Columns="2">
        <Label x:Name="labelclearancedim" Content="Start/End Clearance [m]" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:DistanceEdit x:Name="alignclearance"/>
    </UniformGrid>

    <Label x:Name="labelframedim" Content="Computed Frame Dimensions [m]" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <UniformGrid Columns="2">
        <Label Content="Frame-Width" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="framewidth" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Frame-Height" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="frameheight" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="approx. Frame-Overlap" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="frameoverlap" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    </UniformGrid>


    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
            <CheckBox x:Name="createsheets" Content="create Sheets with Dynaviews in existing Sheetset" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=createsheets}">
                <UniformGrid Columns="2">
                    <Label Content="Select Sheetset" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:ComboBoxEntityPicker x:Name="sheetsetpicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label Content="Select Viewfilter" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:ComboBoxEntityPicker x:Name="viewfilterpicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label Content="Select Dynaview-Layer" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:LayerPicker x:Name="dynalayerpicker"/>
                </UniformGrid>
                <Label Content="Dynaview Bottom Left Corner on Sheet" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

                <UniformGrid Columns="2">
                    <Label x:Name="labeldynax" Content="X in mm" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:DistanceEdit x:Name="dynax"/>
                    <Label x:Name="labeldynay" Content="Y in mm" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:DistanceEdit x:Name="dynay"/>
                </UniformGrid>

            </StackPanel>
        </StackPanel>
    </Border>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>


</StackPanel> 
    