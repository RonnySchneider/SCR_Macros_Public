<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditValSpreadsheet"
        xmlns:ig="http://schemas.infragistics.com/xaml"
        mc:Ignorable="d"
        Title="Edit as Spreadsheet" Height="500" Width="700">
	<Grid Margin="2" >
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<ig:XamSpreadsheet x:Name="Spreadsheet" Grid.Row="0" HorizontalAlignment="Left" Margin="4"
                    AllowDeleteWorksheet="False"             AllowAddWorksheet="False" AllowDrop="True" />
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" >
			<Button x:Name="NewBtn" Content="New" Margin="5"/>
			<Button x:Name="SaveBtn" Content="Save" Margin="5" IsDefault="True"/>
			<Button x:Name="CloseBtn" Content="Cancel" Margin="5" IsCancel="True" />
		</StackPanel>
	</Grid>
</Window>
