<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800" >
    <Label Content="Bearing Flatness Check&#xA;compares max. 9 Points in a 3x3 Grid,&#xA;where 3 corner points define a Reference-Plane"/>

    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
            <Label Content="select Output Layer:"/>
            <Wpf:LayerPicker x:Name="layerpicker"/>

            <UniformGrid Columns="2">
                <Label Content="In Tolerance" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <Wpf:ColorPicker x:Name="incolorpicker"/>
                <Label Content="Out of Tolerance" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <Wpf:ColorPicker x:Name="outcolorpicker"/>
                <Label Content="Text Height" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                <Wpf:DistanceEdit x:Name="textheight" Distance="0.2" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            </UniformGrid>

            <GroupBox>
                <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="dH Units" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="unitpicker" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <CheckBox Grid.Column="2" x:Name="addunitsuffix" Content="add&#xA;Output-Suffix" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="20 *"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="dH Text Decimals" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:NumericEdit Grid.Column="1" x:Name="textdecimals" Value="3"/>
                    <Button Grid.Column="2" x:Name="decdecimals" Content="-" Click="decdecimals_Click" Width="30" Height="20" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
                    <Button Grid.Column="3" x:Name="incdecimals" Content="+" Click="incdecimals_Click" Width="30" Height="20" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox>
                <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Compare Units" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="compareunitpicker" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <CheckBox Grid.Column="2" x:Name="compareaddunitsuffix" Content="add&#xA;Output-Suffix" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="20 *"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Output Flatness Decimals" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:NumericEdit Grid.Column="1" x:Name="flatnessdecimals" Value="3"/>
                    <Button Grid.Column="2" x:Name="decflatdecimals" Content="-" Click="decflatdecimals_Click" Width="30" Height="20" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
                    <Button Grid.Column="3" x:Name="incflatdecimals" Content="+" Click="incflatdecimals_Click" Width="30" Height="20" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
                 </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="25 *"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="25*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Compare Flatness" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:DistanceEdit Grid.Column="1" x:Name="compareflatness1"/>
                        <Label Grid.Column="2" Content="/" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                        <Wpf:DistanceEdit Grid.Column="3" x:Name="compareflatness2"/>
                 </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Border>

    <Label Content="Select 3 Corners to define a Reference-Plane&#xA;Text Orientation works best with the following Order&#xA;Bottom-Left - Top-Left - Top-Right"/>

    <Label Content="Reference Corner 1:"/>
    <Wpf:CoordinateEdit x:Name="coordCtl1" ShowElevationIf3D="True" AutoTab="True"/>
    <Label Content="Reference Corner 2:"/>
    <Wpf:CoordinateEdit x:Name="coordCtl2" ShowElevationIf3D="True" AutoTab="True"/>
    <Label Content="Reference Corner 3:"/>
    <Wpf:CoordinateEdit x:Name="coordCtl3" ShowElevationIf3D="True" AutoTab="True"/>

    <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
        <StackPanel>
            <Label Content="for ease of use you can rectangle select&#xA;Reference Points are ignored" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>
        </StackPanel>
    </Border>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>
</StackPanel> 
