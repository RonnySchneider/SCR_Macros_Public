    <Label Content="select Layer for Report Data:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:LayerPicker x:Name="ablayerpicker"/>

    <RadioButton x:Name="multipoint" Content="select multiple AB points" IsChecked="True" GroupName="abpoints" VerticalContentAlignment="Center"/>
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=multipoint}">
        <Wpf:MemberSelection x:Name="objs"/>
    </StackPanel>

    <RadioButton x:Name="singlepoint" Content="pick single coordinate" IsChecked="False" GroupName="abpoints" VerticalContentAlignment="Center"/>
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=singlepoint}">
        <Wpf:CoordinateEdit x:Name="coordpick"/>
    </StackPanel>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 