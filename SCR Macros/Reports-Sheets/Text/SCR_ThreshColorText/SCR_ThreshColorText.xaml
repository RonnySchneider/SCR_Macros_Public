<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="600">

    <Label Content="re-color Texts based on specific Number" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:MemberSelection x:Name="objs"/>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
                <Label Content="use number after the following Expression" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,2,-24,2.4"/>
                <TextBox x:Name="searchtext" Text="=dZ" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="1,6,3,6.4"/>
        </StackPanel>
    </Border>
    <GroupBox Header="Thresholds and Colors">
        <StackPanel>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
                <StackPanel>
                    <UniformGrid Columns="3">
                        <Label Content="&lt;=" Margin="0,0,39.6,0" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="thresh1" Text="0.005" Margin="-39.6,0,49.2,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:ColorPicker x:Name="thresh1colorpicker" Margin="-49.2,0,-0.2,0"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
                <StackPanel>
                    <UniformGrid Columns="3">
                        <Label Content="&lt;=" Margin="0,0,39.6,0" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="thresh2" Text="0.010" Margin="-39.6,0,49.2,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:ColorPicker x:Name="thresh2colorpicker" Margin="-49.2,0,-0.2,0"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
                <StackPanel>
                    <UniformGrid Columns="3">
                        <Label Content="&lt;=" Margin="0,0,39.6,0" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                        <TextBox x:Name="thresh3" Text="0.015" Margin="-39.6,0,49.2,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:ColorPicker x:Name="thresh3colorpicker" Margin="-49.2,0,-0.2,0"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
                <StackPanel>
                    <UniformGrid Columns="3">
                        <Label Content="&gt;" Margin="0,0,39.6,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <TextBox x:Name="thresh4" Text="0.015" Margin="-39.6,0,49.2,0" VerticalAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden"/>
                        <Wpf:ColorPicker x:Name="thresh4colorpicker" Margin="-49.2,0,-0.2,0"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

        </StackPanel>
    </GroupBox>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 