<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="362">
    <!--<Label Content="data from Surface B will override Surface A"/>
    <Label Content=""/>-->
    <Label Content="Surface A"/>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker1" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Label Content="Surface B - will override A"/>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker2" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <UniformGrid Columns="2">
        <Label x:Name="stepwidthlabel" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:DistanceEdit x:Name="stepwidth"/>
    </UniformGrid>
    <CheckBox x:Name="usemanualname" Content="define new Surface name yourself" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged"/>
    <TextBox x:Name="manualname" IsEnabled="{Binding IsChecked, ElementName=usemanualname}"/>
    <CheckBox x:Name="overwritesurface" Content="overwrite existing Surface" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged"/>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker3" VerticalAlignment="Center" VerticalContentAlignment="Center" IsEnabled="{Binding IsChecked, ElementName=overwritesurface}"/>
    
    <!--<Label Content="Step - remove data from"/>
    <UniformGrid Columns="2">
        <RadioButton x:Name="bigger" Content="Surface A" IsChecked="True" GroupName="side"/>
        <RadioButton x:Name="smaller" Content="Surface B" IsChecked="False" GroupName="side"/>
    </UniformGrid>-->

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 