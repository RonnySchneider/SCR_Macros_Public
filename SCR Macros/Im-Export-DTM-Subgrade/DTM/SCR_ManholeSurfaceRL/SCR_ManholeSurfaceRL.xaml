<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800">
    <Label Content="select Manholes"/>
    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>

    <Label Content="work with"/>
    <RadioButton x:Name="adjustrim" Content="Rim" GroupName="rimorfloor" IsEnabled="True"/>
    <RadioButton x:Name="adjustfloor" Content="Floor" GroupName="rimorfloor"/>

    <Label Content="select Surface"/>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <Label x:Name="verticaloffsetlabel" Content="Vertical Offset [" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:NumericEdit x:Name="verticaloffset"/>


    <Expander BorderThickness="2,2,2,2" BorderBrush="#FFC700FF" Background="#FFB488C0" IsExpanded="{Binding IsChecked, ElementName=createlines}">

        <Expander.Header>
            <WrapPanel>
                <CheckBox x:Name="createlines" IsChecked="False" Checked="createlinesChanged" Unchecked="createlinesChanged"/>
                <Label Content="Create Outline at current Rim/Floor Elevation"/>
            </WrapPanel>

        </Expander.Header>

        <StackPanel>
            <CheckBox x:Name="createoutline" Content="Create Main Outline" IsChecked="False"/>
            <CheckBox x:Name="createhz1offset" Content="1st Horizontal Offset" IsChecked="False"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=createhz1offset}">
                <UniformGrid Columns="2">
                    <Label x:Name="hz1offsetlabel" Content="Horizontal Offset [" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:NumericEdit x:Name="hz1offset"/>
                </UniformGrid>
            </StackPanel>
            <CheckBox x:Name="createhz2vzoffset" Content="additional Horizontal/Vertical Offset" IsChecked="False"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=createhz2vzoffset}">
                <UniformGrid Columns="2">
                    <Label x:Name="hz2offsetlabel" Content="Horizontal Offset [" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:NumericEdit x:Name="hz2offset"/>
                    <Label x:Name="vz2offsetlabel" Content="Vertical Offset [" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:NumericEdit x:Name="vz2offset"/>
                </UniformGrid>
            </StackPanel>

            <Label Content="select Output Layer:"/>
            <Wpf:LayerPicker x:Name="layerpicker" IsEnabled="False"/>


            <CheckBox x:Name="addtosurface" Content="add to Surface"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=addtosurface}">
                <Wpf:ComboBoxEntityPicker x:Name="addsurfacepicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Expander>
    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>
</StackPanel> 