<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="300
            " d:DesignHeight="650" >

    <Label x:Name="toleranceheader" Content="vertical threshold between interpolated and true elevations" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:DistanceEdit x:Name="vertol" Distance="0.0001"/>

    <Label Content="select Output Layer - in case the source is a 2D CAD polyline:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>

    <Label Content="Face Vertex 1:"/>
    <Wpf:CoordinateEdit x:Name="coordpick1" ShowElevationIf3D="True" AutoTab="True"/>
    <Label Content="Face Vertex 2:"/>
    <Wpf:CoordinateEdit x:Name="coordpick2" ShowElevationIf3D="True" AutoTab="True"/>
    <Label Content="Face Vertex 3:"/>
    <Wpf:CoordinateEdit x:Name="coordpick3" ShowElevationIf3D="True" AutoTab="True"/>

    <RadioButton x:Name="multiobjs" Content="select Lines and/or Points" GroupName="group1" IsChecked="True"/>
    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0" IsEnabled="{Binding IsChecked, ElementName=multiobjs}"/>

    <RadioButton x:Name="linewithlimits" Content="select one specific Line with chainage limits" GroupName="group1" IsChecked="False"/>
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=linewithlimits}">
        <Wpf:SelectEntity x:Name="linepicker1"/>
        <UniformGrid Columns="2">
            <Label Content="Start Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:StationEdit x:Name="startstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
            <Label Content="End Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:StationEdit x:Name="endstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
        </UniformGrid>
    </StackPanel>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 
