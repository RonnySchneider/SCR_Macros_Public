<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800
            " >
    <Label Content="create a Contour on a projected Surface"/>

    <Label Content="select a projected Surface:"  Margin="0" />
    <Wpf:ComboBoxEntityPicker x:Name="surfacedroplist" Margin="0" Loaded="surfacedroplistChanged"/>

    <Label Content="select Output Line Layer:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>

    <Label Content="Contour at Elevation:"/>
    <Wpf:ElevationEdit x:Name="ElCtl1" Height="29" Margin="0"/>
    
    <CheckBox x:Name="checkBox" Content="create at Interval" Height="25" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged"/>
    <Label Content="Start Elevation:"/>
    <Wpf:ElevationEdit x:Name="ElStart" Height="29" Margin="0" IsEnabled="False"/>
    <Label Content="End Elevation:"/>
    <Wpf:ElevationEdit x:Name="ElEnd" Height="29" Margin="0" IsEnabled="False"/>
    <Label Content="Elevation Interval:"/>
    <Wpf:ElevationEdit x:Name="ElInterval" Height="29" Margin="0" IsEnabled="False"/>
    <Label Content="the interval sign will be auto corrected "/>
    <Label Content="depending on which start/end value is higher"/>
    <Label Content=""/>
    <Label Content="Selected Surface Limits"/>
    <Label x:Name="LabelMin" Content="Min"/>
    <Label x:Name="LabelMax" Content="Max"/>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 