<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800
            ">
    <Label Content="select Layer with 3D Faces"/>
    
    <Wpf:LayerPicker x:Name="layerpicker"/>

    <UniformGrid Columns="2">
        <Label x:Name="arealabel" Content="Area Threshold" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <Wpf:AreaEdit x:Name="threshold"/>
    </UniformGrid>

    <RadioButton x:Name="checkplanarea" Content="check plan area" GroupName="checkarea" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />
    <RadioButton x:Name="checkslopearea" Content="check slope area" GroupName="checkarea" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="False"/>


    <Label Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <CheckBox x:Name="coloronly" Content="only change the Color of those 3D-Faces, untick to delete" VerticalAlignment="Center" VerticalContentAlignment="Center" />
    
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=coloronly}">
        <Wpf:ColorPicker x:Name="threshcolorpicker"/>
    </StackPanel>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>




</StackPanel> 