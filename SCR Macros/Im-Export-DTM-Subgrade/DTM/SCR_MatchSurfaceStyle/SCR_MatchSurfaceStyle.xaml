<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="216.478" d:DesignHeight="750
            " >
    <Label Content="apply 2D+3D 'Show in' values from Source to Target"/>
    <Label Content="select Source Surface:"  Margin="0" />
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker1"/>
    <Label Content="select Target Surface:"  Margin="0" />
    <RadioButton x:Name="single" Content="change 1 specific Surface" GroupName="1"/>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker2" IsEnabled="{Binding IsChecked, ElementName=single}"/>

    <RadioButton x:Name="multi" Content="change multiple Surfaces" GroupName="1"/>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9" IsEnabled="{Binding IsChecked, ElementName=multi}">
        <StackPanel>
            <UniformGrid Columns="2">
                <Label Content="Pre-Filter List&#xA;(case insensitive)" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                <TextBox x:Name="ticklistfilter" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            </UniformGrid>
            <Label Content="no need to tick,&#xA;only highlight using SHIFT or CTRL"/>
            <GroupBox>
                <StackPanel>
                    <Wpf:CheckedListBoxEntityPicker x:Name="surface2ticklist" Background="#FFF3F3F7" Height="300"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Border>

    <Label Content="in addition to 'show in' values, change" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <CheckBox x:Name="color" Content="Surface Color" IsChecked="False"/>
    <CheckBox x:Name="maxedgelength" Content="Maximum edge length" IsChecked="False"/>
    <CheckBox x:Name="maxedgeangle" Content="Maximum edge angle" IsChecked="False"/>
    <CheckBox x:Name="rebuildmethod" Content="Rebuild method" IsChecked="False"/>
    <CheckBox x:Name="transparency" Content="Transparency" IsChecked="False"/>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 