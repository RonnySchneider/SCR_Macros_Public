<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="362">
    <Label Content="Find RL for a given Basin-Volume"/>
    <Label Content="select the Basin-Surface"/>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="sliceintervallabel" Content="Slice Interval [" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:NumericEdit x:Name="sliceinterval"/>
    <GroupBox>
        <StackPanel>
            <RadioButton x:Name="startaddingfromsurfacemin" IsChecked="True" Content="start Slice-Volume-Adding from Surface Minimum" GroupName="addingstart"/>

            <RadioButton x:Name="startaddingfromelevation" Content="start Slice-Volume-Adding from Elevation" GroupName="addingstart"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=startaddingfromelevation}">
                <Wpf:ElevationEdit x:Name="elstart" Height="29" Margin="0"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
    <GroupBox>
        <StackPanel>
            <RadioButton x:Name="singlesolution" Content="compute for a single Volume" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=singlesolution}">
                    <UniformGrid Columns="2">
                    <Label x:Name="targetvolumelabel" Content="Target Volume [" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:NumericEdit x:Name="targetvolume"/>
                    </UniformGrid>
                </StackPanel>
            <RadioButton x:Name="multisolution" Content="compute at Volume-Interval" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=multisolution}">
                <UniformGrid Columns="2">
                    <Label x:Name="volumeintervallabel" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:NumericEdit x:Name="volumeinterval"/>
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </GroupBox>

    <CheckBox x:Name="createcontour" Content="create Countours on Layer 0" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>



</StackPanel> 