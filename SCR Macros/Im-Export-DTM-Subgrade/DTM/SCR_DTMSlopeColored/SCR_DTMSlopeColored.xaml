<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800
            ">

    <Label Content="select Surface"/>
    <!--<Wpf:ComboBoxEntityPicker x:Name="surfacepicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>-->
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
            <UniformGrid Columns="2">
                <Label Content="Pre-Filter List&#xA;(case insensitive)" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                <TextBox x:Name="ticklistfilter" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            </UniformGrid>
            <Label Content="no need to tick,&#xA;only highlight using SHIFT or CTRL"/>
            <GroupBox>
                <StackPanel>
                    <Wpf:CheckedListBoxEntityPicker x:Name="surfaceticklist" Background="#FFF3F3F7" Height="190"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Border>

    <CheckBox x:Name="newsurface" Content="create new Surface with flat but elevated Triangles" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="newsurfaceChanged" Unchecked="newsurfaceChanged"/>

    <StackPanel x:Name="nonewsurface" IsEnabled="True">
        <GroupBox BorderThickness="2,2,2,2" Background="#FFDABB83" BorderBrush="#FFCD8025">
            <StackPanel>
                <Label Content="Get Color Information"/>
                <RadioButton x:Name="usecsv" IsChecked=" True" Content="from CSV" GroupName="colorinput" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                <StackPanel IsEnabled="{Binding IsChecked, ElementName=usecsv}">

                    <Button x:Name="csvbutton" Content="Select CSV-File" Click="csvbutton_Click"/>
                    <TextBlock x:Name="csvfilename" Text="" TextWrapping="Wrap"/>

                </StackPanel>
                <RadioButton x:Name="usecmc" IsChecked="False" Content="use MSI Manager" GroupName="colorinput" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                <StackPanel IsEnabled="{Binding IsChecked, ElementName=usecmc}">
                    <Label Content="Select Slope-Material-Category"/>
                    <Wpf:ComboBoxEntityPicker x:Name="hiddenmateriallist" Visibility="Hidden" Height="0"/>
                    <ComboBox x:Name="usermaterialpicker"/>
                </StackPanel>
            <CheckBox x:Name="interpolatecolor" Content="interpolate Colors" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            </StackPanel>
        </GroupBox>




        <RadioButton x:Name="recolordtm" Content="colorize DTM with Materials" GroupName="draw" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <RadioButton x:Name="drawifc" Content="draw Triangles as IFC Faces" GroupName="draw" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <RadioButton x:Name="drawlines" Content="draw Triangles as filled Linestrings" GroupName="draw" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <Label Content="select Layer for Stringlines/3D Faces"/>
        <Wpf:LayerPicker x:Name="layerpicker"/>
        <!--<CheckBox x:Name="remapcolor" Content="remap Colors between Min-Max" VerticalAlignment="Center" VerticalContentAlignment="Center" />-->
    </StackPanel>
    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>




</StackPanel> 