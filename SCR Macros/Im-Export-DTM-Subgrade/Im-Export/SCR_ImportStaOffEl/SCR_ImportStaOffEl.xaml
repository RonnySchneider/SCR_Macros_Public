<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="245.277" d:DesignHeight="800"  >
    <Label Content="import CSV with Ptnr, Station, Offset, Elevation"/>

    <Button x:Name="openbutton" Content="select CSV File" Height="42" HorizontalContentAlignment="Center" Click="openbutton_Click" />
    <Label>
        <TextBlock x:Name="openfilename" Text="C:\Users\ronny.schneider\Downloads\StationOffsetEL.csv"/>
    </Label>
    
 
    <Label Content="select Output Point Layer:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>

    <CheckBox x:Name="createdependentpoints" Content="create dependent points" IsChecked="False" Checked="createdependentpointsChanged" Unchecked="createdependentpointsChanged"/>
    <CheckBox x:Name="createpointonline" Content="create additional point on line" IsChecked="True"/>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Distance Units used in the file" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <ComboBox Grid.Column="1" x:Name="unitpicker" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>

    <Label Content="Pointnr in Column? - leave empty for simple points"/>
    <TextBox x:Name="textBox1" Height="23" Text=""/>

    <Label Content="Station in Column?"/>
    <TextBox x:Name="textBox2" Height="23" Text="2"/>

    <Label Content="Offset in Column?"/>
    <TextBox x:Name="textBox3" Height="23" Text="3"/>

    <Label Content="Elevation in Column? - leave empty for Line Elevation"/>
    <TextBox x:Name="textBox4" Height="23" Text="4"/>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
        <StackPanel>
            <Label Content="Elevation is"/>
            <UniformGrid Columns="2">
                <RadioButton x:Name="relativeelev" IsChecked="True" Content="relative to Line" GroupName="1" VerticalAlignment="Center"/>
                <RadioButton x:Name="absoluteelev" IsChecked="False" Content="absolute" GroupName="1" VerticalAlignment="Center"/>
            </UniformGrid>
        </StackPanel>
    </Border>
    <!--<CheckBox x:Name="el_checkBox" Content="Elevation is relativ to Alignment&#xA;untick in case of true Elevations" Height="46" IsChecked="True"/>-->
    
    <Label Content="change Elevation by additional Grade - %"/>
    <TextBox x:Name="textBox5" Height="23" Text="0"/>

    <Label Content="select a Line"/>
    <Wpf:SelectEntity x:Name="linepicker1"/>

    <Label x:Name="errortext" Content=""/>
    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 