<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="245.277" d:DesignHeight="800"  >
    <StackPanel.Resources>
        <BooleanToVisibilityConverter x:Key="b2v" />
    </StackPanel.Resources>
    
    <Label Content="export a surface as DEM ASCII file"/>
    <Label Content="select Surface:"  Margin="0" />
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker"/>
    <UniformGrid Columns="2" Visibility="Hidden">
        <RadioButton x:Name="gridoutput" Content="write local X/Y" GroupName="1" IsChecked="True"/>
        <RadioButton x:Name="degreesoutput" Content="write global Lat/Lon" GroupName="1"/>
    </UniformGrid>
    <UniformGrid Columns="3">
            <Label x:Name="cellsizelabel" Content="Cell Size"/>
            <Wpf:DistanceEdit x:Name="cellsize" Distance="0.2"/>
            <Wpf:AngularEdit x:Name="cellsizedeg" Angle="0.2" Visibility="Hidden"/>
    </UniformGrid>
    <Label Content="bottom left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit x:Name="coordpick1"/>
    <Label Content="top right" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit x:Name="coordpick2"/>

    <!--<Button x:Name="openbutton" Content="select CSV File" Height="42" HorizontalContentAlignment="Center" Click="openbutton_Click" />
    <Label>
        <TextBlock x:Name="openfilename" Text="C:\Users\ronny.schneider\Downloads\StationOffsetEL.csv"/>
    </Label>-->
    

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 