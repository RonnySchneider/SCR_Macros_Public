<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800">

    
    <Label Content="select Georeferenced Images in Project Explorer"/>
    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>

    <CheckBox x:Name="copytofolder" Content="copy Image + Worldfile to new Folder" IsChecked="False"/>
    <GroupBox IsEnabled="{Binding IsChecked, ElementName=copytofolder}">
        <StackPanel>
            <CheckBox x:Name="renamefile" Content="use User defined Name from Properties pane" IsChecked="False"/>
            <Button x:Name="copybutton" Content="Select Target Folder"  Height="42" HorizontalContentAlignment="Center" Click="openbutton_Click" />
            <TextBlock x:Name="targetfolder" Text="Z:\2709 - Day Jobs"/>
        </StackPanel>
    </GroupBox>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <TextBlock x:Name="success" TextWrapping="Wrap"/>


</StackPanel> 