<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="749.8" >
    <Label Content="create cross connections between 2 Lines"/>
    <Label Content="select Output Line Layer:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>
    <Label Content="Line 1 - Interval is used on that one"/>
    <Border BorderBrush="Red" BorderThickness="2">
        <Wpf:SelectEntity x:Name="linepicker1"/>
    </Border>
    <CheckBox x:Name="perptoline1" Content="compute perpendicular from Line 1&#xA;(untick to compute perpendicular to Line 2)" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
            <CheckBox x:Name="chooserange" Content="choose Chainage range" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=chooserange}">
                <UniformGrid Columns="2">
                    <Label Content="Start Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:StationEdit x:Name="startstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                    <Label Content="End Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:StationEdit x:Name="endstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </Border>

    <Label Content="Line 2"/>
    <Border BorderBrush="Green" BorderThickness="2">
        <Wpf:SelectEntity x:Name="linepicker2"/>
    </Border>

    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" >
        <StackPanel>
            <Label Content="approx. max Distance between Line 1 and 2&#xA;avoid double intersection on very curved lines&#xA;also used to avoid far away DTM intersections" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:DistanceEdit x:Name="maxlinedistance" Distance="10.000" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
        </StackPanel>
    </Border>

    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
            <UniformGrid Columns="2">
                <Label Content="Interval:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="interval" Distance="1.000" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
            </UniformGrid>
        </StackPanel>
    </Border>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
        <StackPanel>
            <UniformGrid Columns="2">
                <Label Content="Elevation Offset:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="eloffset" Distance="0.000" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
            </UniformGrid>
            <CheckBox x:Name="usesideslope" Content="use fixed Sideslope instead&#xA;of the Grade between Line 1 and 2" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=usesideslope}">
                <UniformGrid Columns="2">
                    <Label Content="Slope Grade [%]" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:NumericEdit x:Name="sideslope"/>
                    <RadioButton x:Name="slope1" Content="attach Grade to Line 1" GroupName="group1" IsChecked="True"/>
                    <RadioButton x:Name="slope2" Content="attach Grade to Line 2" GroupName="group1" IsChecked="False"/>
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </Border>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>
                <CheckBox x:Name="extendgivenamount" Content="extend in 3D by this amount" IsChecked="False" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:DistanceEdit x:Name="extend" Distance="1" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
        </StackPanel>
    </Border>

    <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
        <StackPanel>
            <CheckBox x:Name="connectinputlines" Content="draw lines between Line 1 and 2" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <CheckBox x:Name="benchpattern" Content="create bench pattern" IsChecked="False" IsEnabled="{Binding IsChecked, ElementName=connectinputlines}"/>
            <CheckBox x:Name="extendtodtm" Content="extend to DTM" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=extendtodtm}">
                <UniformGrid Columns="2">
                    <Label Content="Touch Surface:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:ComboBoxEntityPicker x:Name="designsurfacepicker" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </UniformGrid>
                <CheckBox x:Name="drawtextensions" Content="draw extension lines" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <CheckBox x:Name="connectextensions" Content="connect DTM intersections" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <CheckBox x:Name="adddtmprofile" Content="add DTM profile" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <UniformGrid Columns="2">
                    <Label Content="for x" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:DistanceEdit x:Name="dtmprofilelength" Distance="10.000" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </Border>
    <Label Content="red/magenta lines indicate positive elevation&#xA;difference between Line 1 and 2&#xA;&#xA;blue/magenta lines indicate lines&#xA;which got extended by the fixed amount" VerticalAlignment="Center" VerticalContentAlignment="Center"/>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>



</StackPanel> 
    