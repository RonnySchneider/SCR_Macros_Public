<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="872.093" >
    <Label Content="create Subgrade by dropping FSL"/>

    <Label Content="FSL Surface:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:ComboBoxEntityPicker x:Name="designsurfacepicker" IsEnabled="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <Label Content="select Alignment"/>
    <Wpf:SelectEntity x:Name="linepicker1"/>

    <GroupBox x:Name="stationframe" IsEnabled="False">
        <StackPanel>
            <Border  BorderBrush="#FF7D7D7D" BorderThickness="1">
                <StackPanel>
                    <UniformGrid Columns="2">
                        <Label Content="Interval:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:DistanceEdit x:Name="interval" Distance="1.000" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                        <Label Content="Start Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:StationEdit x:Name="startstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                        <Label Content="End Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:StationEdit x:Name="endstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
                <StackPanel>
                    <UniformGrid Columns="2">
                        <Label Content="Offset 1" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:OffsetEdit x:Name="offsetleft" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                        <Label Content="Offset 2" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:OffsetEdit x:Name="offsetright" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
                <StackPanel>
                    <Label Content="Use Coordinate Picker or enter manually" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <Wpf:CoordinateEdit x:Name="coordpick1"/>
                    <UniformGrid Columns="2">
                        <Label Content="Subgrade Depth" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:DistanceEdit x:Name="subgradedepth" Distance="-0.300" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
                <StackPanel>
                    <CheckBox x:Name="extendtodtmleft" Content="extend Lines to DTM - Left" Height="25" IsChecked="True"/>
                    <CheckBox x:Name="adddtmprofileleft" Content="add DTM profile - Left" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <UniformGrid Columns="2">
                        <Label Content="for x" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:DistanceEdit x:Name="dtmprofilelengthleft" Distance="10.000" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
                <StackPanel>
                    <CheckBox x:Name="extendtodtmright" Content="extend Lines to DTM - Right" Height="25" IsChecked="True"/>
                    <CheckBox x:Name="adddtmprofileright" Content="add DTM profile - Right" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <UniformGrid Columns="2">
                        <Label Content="for x" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:DistanceEdit x:Name="dtmprofilelengthright" Distance="10.000" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </GroupBox>


    <Label Content="select Output Line Layer:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>






</StackPanel> 
    