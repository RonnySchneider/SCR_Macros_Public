<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="245.277" d:DesignHeight="362"  >
    <Label Content="fix Media Links"/>
    <Label Content="select root path for media search&#xA;"/>

    <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
        <StackPanel>

            <CheckBox x:Name="useprojectfolder" Content="use Project folder" Checked="useprojectfolderChanged" Unchecked="useprojectfolderChanged" IsChecked="False"/>

                <Button x:Name="openbutton" Content="Select Root Search Folder"  Height="42" HorizontalContentAlignment="Center" Click="openbutton_Click" />
            <Label>
                <TextBlock x:Name="openfilename" Text="Z:\2709 - Day Jobs"/>
                </Label>
        </StackPanel>
    </Border>
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
        <StackPanel>

            <CheckBox x:Name="fixspecificmedia" Content="select specific media to be fixed" IsChecked="False"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=fixspecificmedia}">
                <Label Content="select specific Media:"/>
                <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0" UseLocalSelection="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
    <!--<Label Content="select Alignments"/>
    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>-->
    <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
        <StackPanel>

            <CheckBox x:Name="copy" Content="Copy to new Location and Change Links to this one" IsChecked="False"/>
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=copy}">
                <CheckBox x:Name="makerelativatnewlocation" Content="create a Subfolder Photos there&#xA;and make all links relative to this one&#xA;handy for VCL handover&#xA;copy the Photos folder to the location of the&#xA;master TBC Project that you drag the VCL in" IsChecked="False"/>
                <Button x:Name="openbutton2" Content="Select Target Folder" Height="42" HorizontalContentAlignment="Center" Click="openbutton2_Click"/>
                <Label>
                    <TextBlock x:Name="targetfolder" Text="Z:\2709 - Day Jobs"/>
                </Label>
            </StackPanel>
        </StackPanel>
    </Border>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>


</StackPanel> 