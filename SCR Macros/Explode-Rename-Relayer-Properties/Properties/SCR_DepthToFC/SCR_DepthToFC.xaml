<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls"
       mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="749.8" >

    <Label Content="select Lines/Points"/>

    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>

    <Label Content="select a Surface"/>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker"/>
    <UniformGrid Columns="2">
        <RadioButton x:Name="changed12d" Content="12d Attribute" IsChecked="True" GroupName="1" />
        <RadioButton x:Name="changefc" Content="FC" IsChecked="False" GroupName="1" />
    </UniformGrid>
    <UniformGrid Columns="2">
        <Label Content="Line Attribute"/>
        <Wpf:NameEdit x:Name="fcnameline" SelectedName="Average Depth (m)"/>
        <Label Content="Point Attribute"/>
        <Wpf:NameEdit x:Name="fcnamepoint" SelectedName="Depth (m)"/>
    </UniformGrid>

    <Label x:Name="errordepth" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Blue"/>
    <Label x:Name="errorfc" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Green"/>
    <Label x:Name="error12d" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Magenta"/>
    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>



</StackPanel> 
    