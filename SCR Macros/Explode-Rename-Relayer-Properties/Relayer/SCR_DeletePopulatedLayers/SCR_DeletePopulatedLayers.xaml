<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="245.277" d:DesignHeight="491.228"  >

    <Label Content="clean and delete Populated Layers:"/>
    <CheckBox x:Name="deletelayer" Content="delete Layers (untick to just delete content)"/>

    <GroupBox>
        <GroupBox.Header>
            <RadioButton x:Name="picklayer" Content="clean 1 specific Layer" GroupName="selection" IsChecked="True"/>
        </GroupBox.Header>
        <Border IsEnabled="{Binding IsChecked, ElementName=picklayer}">
            <StackPanel>
                <Wpf:LayerPicker x:Name="layerpicker"/>
                <Label x:Name="membercount" Content="Membercount: "/>
            </StackPanel>
        </Border>
    </GroupBox>

    <GroupBox>
        <GroupBox.Header>
            <RadioButton x:Name="searchlayer" Content="clean if Layer Name contains the following Text&#xA;(case sensitive)" GroupName="selection" IsChecked="False"/>
        </GroupBox.Header>
        <Border IsEnabled="{Binding IsChecked, ElementName=searchlayer}" Background="#FF97B9D9">
            <StackPanel>
                <TextBox x:Name="searchtext" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="1,6,3,6.4"/>
            </StackPanel>
        </Border>
    </GroupBox>

    <GroupBox>
        <GroupBox.Header>
            <RadioButton x:Name="multilayer" Content="clean multiple Layers - tick them" GroupName="selection" IsChecked="False"/>
        </GroupBox.Header>
        <Border IsEnabled="{Binding IsChecked, ElementName=multilayer}">
            <StackPanel>
                <Wpf:CheckedListBoxEntityPicker x:Name="layerticklist"/>
            </StackPanel>
        </Border>
    </GroupBox>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 