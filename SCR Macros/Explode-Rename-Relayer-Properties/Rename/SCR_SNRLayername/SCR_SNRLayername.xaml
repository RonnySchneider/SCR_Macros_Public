<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls"
       mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="245.277" d:DesignHeight="800"  >
    <Label Content="search and replace in Layer names"/>

    <Expander BorderThickness="2,2,2,2" IsExpanded="{Binding IsChecked, ElementName=selectlayers}">
        <Expander.Header>
            <WrapPanel>
                <CheckBox x:Name="selectlayers" Content="only for certain Layers" IsChecked="True" />
            </WrapPanel>
        </Expander.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=selectlayers}">
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
                <StackPanel>
                    <UniformGrid Columns="2">
                        <Label Content="Pre-Filter List&#xA;(case insensitive)" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                        <TextBox x:Name="ticklistfilter" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                    </UniformGrid>
                    <Label Content="no need to tick,&#xA;only highlight using SHIFT or CTRL"/>
                    <GroupBox>
                        <StackPanel>
                            <Wpf:CheckedListBoxEntityPicker x:Name="layerticklist" Background="#FFF3F3F7" Height="300"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Border>
        </StackPanel>
    </Expander>
    <Label Content="Search String"/>
    <TextBox x:Name="searchtext" Height="23" TextWrapping="Wrap" Text=""/>
    <Label Content="Replace String"/>
    <TextBox x:Name="replacetext" Height="23" TextWrapping="Wrap" Text=""/>


    <CheckBox x:Name="createcopies" Content="create Layers with new Name, instead of rename&#xA;Properties of the old Layer will be copied" IsChecked="False" />
    <CheckBox x:Name="copyobjects" Content="copy the objects on those Layers&#xA;to the new ones" IsChecked="False" />
    <CheckBox x:Name="renamegroup" Content="use old Layergroup as source and apply renaming on it&#xA;and create/find new group with that new name" IsChecked="False" IsEnabled="{Binding IsChecked, ElementName=createcopies}"/>
    <!--<StackPanel  IsEnabled="{Binding IsChecked, ElementName=createcopies}">
        --><!--<Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>--><!--
    </StackPanel>-->

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 