<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="245.277" d:DesignHeight="362"  >
    <Label Content="search and replace in Points or Feature-Codes"/>
    <RadioButton x:Name="snrpoint" Content="Point-Names" GroupName="pointorfeature" IsChecked="True"/>
    <RadioButton x:Name="snrfc" Content="Feature-Codes" GroupName="pointorfeature"/>
    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>


    <RadioButton x:Name="fctopointname" IsChecked="True" Content="replace Pointname with Feature-Code" GroupName="1"/>
    
    <RadioButton x:Name="snr" IsChecked="False" Content="search and replace" GroupName="1"/>
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=snr}">
        <GroupBox>
        <GroupBox.Header>
            <CheckBox x:Name="radio1" Content="Search and Replace" IsChecked="True"/>
        </GroupBox.Header>
        <Border IsEnabled="{Binding IsChecked, ElementName=radio1}">
            <StackPanel>
                <UniformGrid Columns="2">
                    <Label Content="Search String"/>
                    <TextBox x:Name="textBox1" Height="23" Text=""/>
                    <Label Content="Replace String"/>
                    <TextBox x:Name="textBox2" Height="23" Text=""/>
                </UniformGrid>
            </StackPanel>
        </Border>
        </GroupBox>
        <Label Content="if Search and Replace Strings are identical then the&#xA;Prefix/Suffix change is only applied&#xA;if that specific string is found&#xA;otherwise it's always applied if ticked"/>
        <GroupBox>
            <GroupBox.Header>
                <CheckBox x:Name="radio2" Content="Prefix/Suffix" IsChecked="False"/>
            </GroupBox.Header>
            <Border IsEnabled="{Binding IsChecked, ElementName=radio2}">
                <StackPanel>
                    <UniformGrid Columns="2">
                        <Label Content="Prefix"/>
                        <TextBox x:Name="textBox3" Height="23" Text=""/>
                        <Label Content="Suffix"/>
                        <TextBox x:Name="textBox4" Height="23" Text=""/>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </GroupBox>
    </StackPanel>

    <TextBlock x:Name="error" Text="" TextWrapping="Wrap" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>




</StackPanel> 