<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="600">


    <GroupBox Header="select Lines">
        <StackPanel x:Name="moreselections">
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1"  Background="#FF97B9D9">
                <StackPanel>
                    <RadioButton x:Name="globalselection" Content="change all lines in Project" GroupName="globalselection"/>
                    <RadioButton x:Name="selectmanually" Content="select Lines manually" GroupName="globalselection" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="3,0,-0.2,0" />
                    <StackPanel IsEnabled="{Binding IsChecked, ElementName=selectmanually}">
                        <Wpf:MemberSelection x:Name="objs" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </GroupBox>
   
    <GroupBox Header="new line name">
        <StackPanel>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
                <StackPanel>
                    <RadioButton x:Name="linenameelev" Content="change name to line elevation" GroupName="linename" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1">
                <StackPanel>
                    <RadioButton x:Name="linenamelayername" Content="change name to layername" GroupName="linename" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border BorderBrush="#FF7D7D7D" BorderThickness="1" Background="#FF97B9D9">
                <StackPanel>
                    <RadioButton x:Name="linenamemanual" Content="change name entered text" GroupName="linename" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <StackPanel IsEnabled="{Binding IsChecked, ElementName=linenamemanual}">
                        <TextBox x:Name="newlinename" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="3,0,3,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </GroupBox>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 