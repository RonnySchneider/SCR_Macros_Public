<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="835.002">

    <Label Content="Select IFC-Object(s)"/>
    <Wpf:MemberSelection x:Name="objs"/>

    <UniformGrid Columns="2">
        <Button x:Name="savesel" Content="save Selection and turn it off" Click="saveselection_Click"/>
        <Button x:Name="restoresel" Content="restore Selection and turn it on" Click="restoreselection_Click"/>
        <Label Content="count of temporarily saved Objects"/>
        <Label x:Name="savecount" Content=""/>
    </UniformGrid>
   
    
    <Label Content="Select Origin" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit x:Name="coordpick1"/>
    <Label Content="Select X-Direction" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit x:Name="coordpick2"/>
    <Label Content="Select Y-Direction" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit x:Name="coordpick3"/>
    <UniformGrid Columns="2">
        <RadioButton x:Name="squarez" Content="Z is square to XY" IsChecked="True" Checked="showoverlayChanged" VerticalAlignment="Center" GroupName="group1"/>
        <RadioButton x:Name="independentz" Content="Z is independent" IsChecked="False" Checked="showoverlayChanged" VerticalAlignment="Center" GroupName="group1"/>
    </UniformGrid>
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=independentz}">
        <Label Content="Select Z-Direction" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:CoordinateEdit x:Name="coordpick4"/>
    </StackPanel>
    <CheckBox x:Name="rotateaxes" Content="have the defined coordinate sytem follow the rotation" IsChecked="False" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <CheckBox x:Name="showoverlay" Content="show Axis-Overlay" IsChecked="False" Checked="showoverlayChanged" Unchecked="showoverlayChanged" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <GroupBox Background="#7F0000FF" BorderBrush="Blue">
        <UniformGrid Columns="2">
            <Label Content="Rot around X" />
            <Wpf:AngularEdit x:Name="xrot"/>
            <Button x:Name="ccw_x" Content="&#x21b6;" Click="ccw_x_Click"/>
            <Button x:Name="cw_x" Content="&#x21b7;" Click="cw_x_Click"/>
        </UniformGrid>
    </GroupBox>
    <GroupBox Background="#7F00FF00" BorderBrush="Lime">
        <UniformGrid Columns="2">
            <Label Content="Rot around Y" />
            <Wpf:AngularEdit x:Name="yrot"/>
            <Button x:Name="ccw_y" Content="&#x21b6;" Click="ccw_y_Click"/>
            <Button x:Name="cw_y" Content="&#x21b7;" Click="cw_y_Click"/>
        </UniformGrid>
    </GroupBox>
    <GroupBox Background="#7FFF0000" BorderBrush="Red">
        <UniformGrid Columns="2">
            <Label Content="Rot around Z" />
            <Wpf:AngularEdit x:Name="zrot"/>
            <Button x:Name="ccw_z" Content="&#x21b6;" Click="ccw_z_Click"/>
            <Button x:Name="cw_z" Content="&#x21b7;" Click="cw_z_Click"/>
        </UniformGrid>
    </GroupBox>

    <!--<Button x:Name="resetposition" Content="Reset to Original Position" Click="resetposition_Click"/>-->

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>



</StackPanel> 