<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800">

    <UniformGrid Columns="2">
        <CheckBox x:Name="relayer" Content="Relayer"/>
        <Wpf:LayerPicker x:Name="layerpicker" IsEnabled="{Binding IsChecked, ElementName=relayer}"/>
    </UniformGrid>

    <Expander BorderThickness="2,2,2,2" IsExpanded="{Binding IsChecked, ElementName=linemode}" Background="#FFCBECC2" BorderBrush="#FF337C27">

        <Expander.Header>
            <WrapPanel>
                <RadioButton x:Name="linemode" IsChecked="True" VerticalAlignment="Center" GroupName="group1"/>
                <Label Content="place along a line"/>
            </WrapPanel>

        </Expander.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=linemode}">
            <Label Content="Line - Interval is used on that one"/>
            <Wpf:SelectEntity x:Name="linepicker1"/>
            <GroupBox Background="#FF93DA80" BorderBrush="#FF97BD92">
                <GroupBox.Header>
                    <CheckBox x:Name="chooserange" Content="choose Chainage range" IsChecked="False" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                </GroupBox.Header>
                <StackPanel IsEnabled="{Binding IsChecked, ElementName=chooserange}">
                    <UniformGrid Columns="2">
                        <Label Content="Start Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:StationEdit x:Name="startstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                        <Label Content="End Chainage:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                        <Wpf:StationEdit x:Name="endstation" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,3,0"/>
                    </UniformGrid>
                </StackPanel>
            </GroupBox>
            <UniformGrid Columns="2">
                <Label Content="Interval:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="interval"/>
                <Label Content="horizontal Offset"/>
                <Wpf:DistanceEdit x:Name="horizontaloffset"/>
            </UniformGrid>
            <CheckBox x:Name="tiltobject" Content="tilt the object - perp. to lineslope or DTM" IsChecked="False" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>
   </Expander>
    <Expander BorderThickness="2,2,2,2" IsExpanded="{Binding IsChecked, ElementName=pointmode}" Background="#FFDABB83" BorderBrush="#FFCD8025">

        <Expander.Header>
            <WrapPanel>
                <RadioButton x:Name="pointmode" IsChecked="False" VerticalAlignment="Center" GroupName="group1"/>
                <Label Content="place at point locations"/>
            </WrapPanel>

        </Expander.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=pointmode}">
            <UniformGrid Columns="2">
                <RadioButton x:Name="generalorientation" Content="general Orientation" IsChecked="True" VerticalAlignment="Center" GroupName="group2"/>
                <Wpf:AngularEdit x:Name="genrot" IsEnabled="{Binding IsChecked, ElementName=generalorientation}"/>
                <RadioButton x:Name="squaretoline" Content="square to Line" IsChecked="False" VerticalAlignment="Center" GroupName="group2"/>
                <Wpf:SelectEntity x:Name="linepicker2" IsEnabled="{Binding IsChecked, ElementName=squaretoline}"/>
            </UniformGrid>
            <Label Content="select Points"/>
            <Wpf:MemberSelection x:Name="point_objs" UseLocalSelection="True" UpdateTextOnSelectionChange="False" PreviewGotKeyboardFocus="Selection_PreviewGotFocus"/> <!--ValueChanged="Selection_ValueChanged"/>-->
        </StackPanel>
    </Expander>

    <Label Content="Elevation from"/>
    <UniformGrid Columns="2">
        <RadioButton x:Name="lineelevation" Content="Line/Point itself" IsChecked="True" GroupName="elevation"/>
        <RadioButton x:Name="surfaceelevation" Content="Surface" IsChecked="False" GroupName="elevation"/>
    </UniformGrid>
    <Wpf:ComboBoxEntityPicker x:Name="surfacepicker" IsEnabled="{Binding IsChecked, ElementName=surfaceelevation}" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <UniformGrid Columns="2">
        <Label Content="add Elevation Offset"/>
        <Wpf:ElevationEdit x:Name="elevationoffset"/>
    </UniformGrid>
    <Label Content="Object(s) to be placed"/>
    <Label Content="currently only IFCMesh and Linestring are supported"/>
    <Wpf:MemberSelection x:Name="objs" UseLocalSelection="True" UpdateTextOnSelectionChange="False" PreviewGotKeyboardFocus="Selection_PreviewGotFocus" /> <!--ValueChanged="Selection_ValueChanged"/>-->
    <!--<Wpf:SelectEntity x:Name="objectpicker"/>-->
    <Label Content="Select Object Origin - placed on Line" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit x:Name="coordpick1"/>
    <Label Content="Select Shape Orientation Point - will be parallel to line" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit x:Name="coordpick2"/>






    <!--<UniformGrid Columns="2">
        <Label x:Name="girderwidthlabel" Content="Girder Width" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:DistanceEdit x:Name="girderwidth"/>
        <Label x:Name="girderlengthlabel" Content="Girder Length" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:DistanceEdit x:Name="girderlength"/>
        <Label x:Name="girderskewlabel" Content="Girder Skew" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Wpf:DistanceEdit x:Name="girderskew"/>

    </UniformGrid>-->


    <!--<Wpf:MemberSelection x:Name="objs"/>-->

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>



</StackPanel> 