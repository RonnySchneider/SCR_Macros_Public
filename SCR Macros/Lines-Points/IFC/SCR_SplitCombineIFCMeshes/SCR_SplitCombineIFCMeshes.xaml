<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="300" d:DesignHeight="362">


    <Label Content="select some objects"/>
    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>
    <Wpf:SelectEntity x:Name="meshpicker"/>
    <UniformGrid Columns="2">
        <RadioButton x:Name="split" Content="Split" IsChecked="True" GroupName="1" Checked="radiochange" Unchecked="radiochange"/>
        <RadioButton x:Name="combine" Content="Combine" IsChecked="False" GroupName="1" Checked="radiochange" Unchecked="radiochange"/>
        <RadioButton x:Name="move" Content="Move in BIM-Tree" IsChecked="False" GroupName="1" Checked="radiochange" Unchecked="radiochange"/>
        <RadioButton x:Name="addentry" Content="add Tree-Entry" IsChecked="False" GroupName="1" Checked="radiochange" Unchecked="radiochange"/>
        <RadioButton x:Name="createfrom3DFaces" Content="create from 3D Faces" IsChecked="False" GroupName="1" Checked="radiochange" Unchecked="radiochange"/>
        <RadioButton x:Name="createfrompoints" Content="create from Points/Lines" IsChecked="False" GroupName="1" Checked="radiochange" Unchecked="radiochange"/>
        <RadioButton x:Name="reversetriangulation" Content="reverse Triangle Definition" IsChecked="False" GroupName="1" Checked="radiochange" Unchecked="radiochange"/>
    </UniformGrid>

    <Label></Label>        
    <CheckBox x:Name="deletefaces" Content="delete 3DFaces when done" IsChecked="False"/>
    <CheckBox x:Name="triggerinvisible" Content="trigger Invisible after Move"/>
    
    <Label></Label>        
    
    <UniformGrid Columns="2">
        <Label Content="Name for combined Object"  Visibility="{Binding Visibility, ElementName=combinedname}"/>
        <TextBox x:Name="combinedname" Text=""/>
        <Label Content="BIM Entity Type" Visibility="{Binding Visibility, ElementName=bimtype}"/>
        <ComboBox x:Name="bimtype">
            <ComboBoxItem Content="IFCPROJECT"/>
            <ComboBoxItem Content="IFCSITE"/>
            <ComboBoxItem Content="IFCBUILDING"/>
            <ComboBoxItem Content="IFCBUILDINGSTOREY"/>
            <ComboBoxItem Content="IFCBUILDINGELEMENTPROXY"/>
        </ComboBox>
        <Label Content="BIM Entity Color" Visibility="{Binding Visibility, ElementName=meshcolorpicker}"/>
        <Wpf:ColorPicker x:Name="meshcolorpicker"/>
        <Label Content="BIM Entity Layer" Visibility="{Binding Visibility, ElementName=layerpicker}"/>
        <Wpf:LayerPicker x:Name="layerpicker"/>

    </UniformGrid>
    
    <Grid Height="400">
            <TreeView x:Name="Tree"/>
    </Grid>
    <Label x:Name="success" Content=""/>
    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>

    <Wpf:CheckedListBoxEntityPicker x:Name="helperbox" Height="0" Visibility="Hidden" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

   
</StackPanel> 