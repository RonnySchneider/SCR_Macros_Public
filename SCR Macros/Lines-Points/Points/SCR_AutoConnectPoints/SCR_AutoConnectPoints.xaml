<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="362">

    <Label Content="Auto-Connect Points, always jump to next nearest"/>

    <Label Content="select Output Line Layer:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>

    <Label Content="select Points"/>
    <Wpf:MemberSelection x:Name="objs"/>

    <CheckBox x:Name="usepointid" Content="use Point-ID if possible" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <Label Content="Point to start at:" />
    <Wpf:CoordinateEdit x:Name="coordCtl1" ShowElevationIf3D="True" AutoTab="False"/>

    <CheckBox x:Name="boltspecial" Content="Bolt Special - connect the two points&#xA;that are closest in 2D" IsChecked="False" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    
    <CheckBox Visibility="Hidden" x:Name="deflectionlimit" Content="limit Segment-Deflection to" IsChecked="False" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:CoordinateEdit Visibility="Hidden" x:Name="coordCtl2" ShowElevationIf3D="True" AutoTab="False"/>
    <Wpf:AngularEdit Visibility="Hidden" x:Name="deflectionlimitangle" Angle="0.785"/>
    
    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 