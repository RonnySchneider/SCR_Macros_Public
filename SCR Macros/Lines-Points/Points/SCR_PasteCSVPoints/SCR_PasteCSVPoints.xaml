<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="245.277" d:DesignHeight="800"  >
    <Label Content="paste CSV-style data from Clipboard" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Label Content="1st column is" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <UniformGrid Columns="2">
        <RadioButton x:Name="c1isID" Content="PointID" IsChecked="True" VerticalAlignment="Center" GroupName="group1"/>
        <RadioButton x:Name="c1isEasting" Content="Easting" IsChecked="False" VerticalAlignment="Center" GroupName="group1"/>
    </UniformGrid>
    <Label Content="create" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <UniformGrid Columns="2">
        <RadioButton x:Name="createnamed" Content="named point" IsChecked="False" VerticalAlignment="Center" GroupName="group2"/>
        <RadioButton x:Name="createsimple" Content="simple CAD point" IsChecked="True" VerticalAlignment="Center" GroupName="group2"/>
    </UniformGrid>
    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 