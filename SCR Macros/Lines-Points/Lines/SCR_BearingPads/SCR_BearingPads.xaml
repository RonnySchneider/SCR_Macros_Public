<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="300" d:DesignHeight="872.093" >
    <Label Content="create Bearing Pad Outlines"/>


    <Label Content="select Output Layer:"/>
    <Wpf:LayerPicker x:Name="layerpicker"/>

    <Expander BorderThickness="2,2,2,2" IsExpanded="{Binding IsChecked, ElementName=elevatetoshelf}" Background="#FFDABB83" BorderBrush="#FFCD8025">
        <Expander.Header>
            <WrapPanel>
                <CheckBox x:Name="elevatetoshelf" IsChecked="False" VerticalAlignment="Center"/>
                <Label Content="elevate Bearing/Recess-Lines to Shelf-Plane"/>
            </WrapPanel>
        </Expander.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=elevatetoshelf}">
            <Label Content="Select Shelf P1" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:CoordinateEdit x:Name="shelfcoordpick1" ShowElevationIf3D="True" AutoTab="True"/>
            <Label Content="Select Shelf P2" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:CoordinateEdit x:Name="shelfcoordpick2" ShowElevationIf3D="True" AutoTab="True"/>
            <Label Content="Select Shelf P3" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:CoordinateEdit x:Name="shelfcoordpick3" ShowElevationIf3D="True" AutoTab="True"/>
        </StackPanel>
    </Expander>
    <GroupBox IsEnabled="True" Header="define CL along Abutment/Headstock">
        <StackPanel>
            <StackPanel>
                    <Label Content="Select P1" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:CoordinateEdit x:Name="coordpick1" ShowElevationIf3D="True" AutoTab="True"/>
            </StackPanel>
            <StackPanel>
                    <Label Content="Select P2" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:CoordinateEdit x:Name="coordpick2" ShowElevationIf3D="True" AutoTab="True"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
    <GroupBox x:Name="bearingheader" IsEnabled="True" Header="define Bearing Dimensions" Background="#FF97B9D9">
        <StackPanel>
            <UniformGrid Columns="2">
                <Label Content="Width square to Girder" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="bearingwidth"/>
                <Label Content="Length along Girder" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="bearinglength"/>
            </UniformGrid>
            <CheckBox x:Name="twopads" Content="2 Pads with even Offset" IsChecked="True" Checked="twopadsChanged" Unchecked="twopadsChanged" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

            <Label Content="Bearing-Center Offset from Girder, along Headstock CL" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:DistanceEdit x:Name="bearingoffset"/>

        </StackPanel>
    </GroupBox>
    <GroupBox>
        <GroupBox.Header>
            <CheckBox x:Name="drawoffsetline" Content="create additional Offset-Line"/>
        </GroupBox.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=drawoffsetline}">
            <Label Content="select Output Layer:"/>
            <Wpf:LayerPicker x:Name="layerpicker2"/>
                <Label x:Name="offsetlabel" Content="offset distance (positive is outwards)" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:DistanceEdit x:Name="lineoffset"/>
        </StackPanel>
    </GroupBox>

    <GroupBox>
        <GroupBox.Header>
            <CheckBox x:Name="drawdynaframe" Content="create Dynaview-Frame"/>
        </GroupBox.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=drawdynaframe}">
            <CheckBox x:Name="dynaframeonly" Content="only Dyna-Frame - no Bearing-Lines"/>
            <Label Content="select Output Layer:"/>
            <Wpf:LayerPicker x:Name="layerpicker3"/>
            <Label  x:Name="dynalabel" Content="Dynaview Dimensions on Sheet [mm]" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <UniformGrid Columns="2">
                <Label Content="Dynaview-Width" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="dynawidth"/>
                <!--<Label Content="vertical tolerance" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:NumericEdit x:Name="vertol"/>-->
                <Label Content="Dynaview-Height" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="dynaheight"/>

                <Label Content="Scale-Factor 1 : " VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:NumericEdit x:Name="dynascale"/>

            </UniformGrid>
        </StackPanel>
    </GroupBox>

    <GroupBox IsEnabled="True" Header="define CL along Girder">
        <StackPanel>
            <StackPanel>
                <Label Content="Select P3" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:CoordinateEdit x:Name="coordpick3" ShowElevationIf3D="True" AutoTab="True"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Select P4" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:CoordinateEdit x:Name="coordpick4" ShowElevationIf3D="True" AutoTab="True"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>






</StackPanel> 
    