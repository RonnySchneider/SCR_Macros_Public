<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="800">
    <Label Content="select Line and Offset Point"/>
    <Expander IsExpanded="{Binding IsChecked, ElementName=drawtext}" Background="#FFE8D7B3" BorderBrush="#FF8B6619">
        <Expander.Header>
            <CheckBox x:Name="drawtext" Content="draw Text" IsChecked="False" VerticalAlignment="Center" />
        </Expander.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=drawtext}">
            <UniformGrid Columns="2">
                <Label Content="Textdecimals:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:NumericEdit x:Name="textdecimals" />
            </UniformGrid>
            <CheckBox x:Name="includedist" Content="include Distance" IsChecked="False" VerticalAlignment="Center" />
            <CheckBox x:Name="includeos" Content="include Offset" IsChecked="False" VerticalAlignment="Center" />
            <CheckBox x:Name="includedh" Content="include dH" IsChecked="False" VerticalAlignment="Center" />
            <Label Content="select Textlayer:" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Wpf:LayerPicker x:Name="textlayerpicker"/>
        </StackPanel>
    </Expander>

    <Label Content="Line Point A:"/>
    <Wpf:CoordinateEdit x:Name="coordCtl1" ShowElevationIf3D="True" AutoTab="True"/>
    <Label Content="Line Point B:"/>
    <Wpf:CoordinateEdit x:Name="coordCtl2" ShowElevationIf3D="True" AutoTab="True"/>
    <Label Content="Offset Point:"/>
    <Wpf:CoordinateEdit x:Name="coordCtl3" ShowElevationIf3D="True" AutoTab="True"/>

    <Label Content=""/>
    <UniformGrid Columns="2">
        <Label x:Name="textdistancelabel" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="resultdistance" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <Label x:Name="textoffsetlabel" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="resultoffset" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <Label x:Name="textdhlabel" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="resultdh" Text="" VerticalAlignment="Center" VerticalContentAlignment="Center" />
    </UniformGrid>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 