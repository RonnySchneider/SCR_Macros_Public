<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="749.8" >

    <Label Content="create named Arc Centers"/>

    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>

    <CheckBox x:Name="selectlayer" Content="select Layer - untick to use line layer" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=selectlayer}">
        <Wpf:LayerPicker x:Name="layerpicker"/>
    </StackPanel>

    <CheckBox x:Name="manualname" Content="set Point-Name manual - start of auto-increment" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />
    <StackPanel IsEnabled="{Binding IsChecked, ElementName=manualname}">
        <Wpf:NameEdit x:Name="nameinput"/>
    </StackPanel>

    <CheckBox x:Name="createarcp" Content="create Arc-Points" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />
    <CheckBox x:Name="createpis" Content="create Tangent-PI's" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />
    <CheckBox x:Name="drawarclines" Content="draw Arc-Lines" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />
    <CheckBox x:Name="drawpilines" Content="draw PI-Lines" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />


    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>



</StackPanel> 
    