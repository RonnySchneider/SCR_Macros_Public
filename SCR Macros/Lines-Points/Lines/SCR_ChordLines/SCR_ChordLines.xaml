<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="749.8" >
    <Label Content="convert curved Lines to chorded Polylines"/>
    <GroupBox x:Name="toleranceheader" IsEnabled="True" Header="define Computation Tolerance">
        <StackPanel>
            <UniformGrid Columns="2">
                <Label Content="horizontal tolerance" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="hortol"/>
                <Label Content="vertical tolerance" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="vertol"/>
                <Label Content="max Node Spacing" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <Wpf:DistanceEdit x:Name="nodespacing"/>
            </UniformGrid>

        </StackPanel>
    </GroupBox>

    <GroupBox IsEnabled="True" Header="Layer Settings">
        <StackPanel>
            <RadioButton x:Name="sourcelayer" Content="use Source Layer Name" GroupName="layer" VerticalAlignment="Center" VerticalContentAlignment="Center" />

            <RadioButton x:Name="setlayer" Content="manually select 1 specific Output-Layer" GroupName="layer" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=setlayer}">
                <Wpf:LayerPicker x:Name="layerpicker" />
            </StackPanel>

            <RadioButton x:Name="setprefixsuffix" Content="add Prefix and/or Suffix to Source Layer Name" GroupName="layer" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            <StackPanel IsEnabled="{Binding IsChecked, ElementName=prefix}">
                <UniformGrid Columns="2">
                    <Label Content="Prefix" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="prefix" Text=""/>
                    <Label Content="Suffix" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="suffix" Text=""/>
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </GroupBox>

    <CheckBox x:Name="deletesource" Content="delete Source Line" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

    <Label Content="Select Lines" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

</StackPanel> 
    