<StackPanel Background="#FFF3F3F7"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Wpf="clr-namespace:Trimble.Vce.UI.Controls.Wpf;assembly=Trimble.Vce.UI.Controls" mc:Ignorable="d"  HorizontalAlignment="Stretch"  Margin="4"
       d:DesignWidth="222" d:DesignHeight="749.8" >
    <GroupBox>
        <GroupBox.Header>
            <RadioButton x:Name="createpoints" Content="Create Points at Line VPI's" GroupName="what" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        </GroupBox.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=createpoints}">
            <CheckBox x:Name="vpionly" Content="VPI's only, uncheck to include grade changes" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="setlayerChanged" Unchecked="setlayerChanged"/>
        </StackPanel>
    </GroupBox>

    <GroupBox>
        <GroupBox.Header>
            <RadioButton x:Name="createvpis" Content="Convert Line-Elevations to VPI-Tab" GroupName="what" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        </GroupBox.Header>
        <StackPanel IsEnabled="{Binding IsChecked, ElementName=createvpis}">
            <CheckBox x:Name="deletesource" Content="delete old Line" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="setlayerChanged" Unchecked="setlayerChanged"/>

        </StackPanel>
    </GroupBox>
    <CheckBox x:Name="setlayer" Content="select Output-Layer, otherwise the Source-Layer is used" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="setlayerChanged" Unchecked="setlayerChanged"/>
    <Wpf:LayerPicker x:Name="layerpicker" IsEnabled="False"/>

    <Wpf:MemberSelection x:Name="objs" Height="30" Margin="0"/>

    <Label x:Name="error" Content="" VerticalAlignment="Center" VerticalContentAlignment="Center" Background="#00000000" FontWeight="Bold" Foreground="Red"/>
    <Label x:Name="success" Content=""/>

</StackPanel> 
    